/**index.wxss**/
.hot {
  height: 210rpx;
  background-color: #e53927;
  padding: 10rpx;
}

.hot_title {
  color: white;
  font-size: medium;
  display: block;
}

.search_view {
  background-color: #e53927;
  padding: 10rpx;
}

.search_input {
  background-color: white;
  border-radius: 8rpx;
  height: 70rpx;
}

.onmyoji_item {
  display: flex;
  display: -webkit-box;
  display: -webkit-flex;
  margin-bottom: 5rpx;
  margin-top: 5rpx;
  background-color: #fff;
  padding: 10rpx;
}

.hover_onmyoji {
  background-color: #999999;
}

.item_image {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.item_info {
  background-color: #fff;
}

.image_box {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.item_desc {
  line-height: 1.2;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  color: #999999;
  font-size: medium;
}

.footer {
  font-size: 25rpx;
  color: #999999;
  text-align: center;
  margin-top: 30rpx;
}

.hot_list {
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.hot_item {
  display: inline-block;
  color: #fff;
  line-height: 70rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #d53524;
  border-radius: 15rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}